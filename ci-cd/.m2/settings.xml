<!-- Fetch the artifacts faster by going to the specified Nexus repository before searching in Maven Central -->
<settings>

    <activeProfiles>
        <activeProfile>nexus</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>nexus</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <servers>
        <server>
            <id>nexus</id>
            <!-- When used locally this should be replaced with the secured user/password. -->
            <!-- When run in CI/CD system we rely on it to set the environment variables  -->
            <username>${env.NEXUS_CI_USER}</username>
            <password>${env.NEXUS_CI_USER_PASS}</password>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <id>nexus</id>
            <mirrorOf>central</mirrorOf>
            <url>http://nexus:8081/repository/maven-releases</url>
        </mirror>
    </mirrors>
</settings>